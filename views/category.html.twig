<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h1>{{ category.getName }}</h1>

    {% if tasks is not empty %}
        <p>Here are the tasks for this category:</p>
        <ul>
            {% for task in tasks %}
                <li>{{ task.getDescription }}</li>
            {% endfor %}
        </ul>
    {% endif %}

    <h4>Add a task to this category:</h4>

    {% for category in categories %}
        <li>
            <a href="/categories/{{ category.getId}}">{{ category.getName }}:</a>
            <a href="/categories/{{ category.getId}}/edit">Edit this category</a>
        </li>

    {% endfor %}


    <form action='/categories' method='post'>
        <label for='name'>Category name</label>
        <input id='name' name='name' type='text'>

        <button type='submit'>Add category</button>
    </form>
    <form action='/delete_categories' method='post'>
        <button type='submit'>Clear</button>
    </form>


    <p><a href='/'>Home</a></p>
</body>
</html>
