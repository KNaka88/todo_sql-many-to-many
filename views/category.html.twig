<html>
<head>
    <title>To Do List</title>
</head>
<body>
    <h1><a href="/categories/{{ category.getId }}/edit">Edit {{ category.getName }}</a></h1>

    <form action='/delete/tasks' method='post'>
        <input name='_method' type='hidden' value='delete'>
        {% if tasks is not empty %}
            <p>Here are the tasks:</p>
            <ul>
                {% for task in tasks %}
                    <li>Task: {{ task.getDescription }} Due by: {{ task.getDueDate }}
                        <button
                            type='submit'
                            name='delete_one_task_button'
                            value='{{ task.getId }}'
                        >
                            Delete
                        </button>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
    </form>

    <h4>Add a task</h4>

    <form action='/tasks' method='post'>
        <input id="category_id" name="category_id" type="hidden" value="{{ category.getId() }}">
        <label for='description'>Task Description</label>
        <input id='description' name='description' type='text'>

        <label for='due_date'>Date Due</label>
        <input name='due_date' type='date'>

        <button type='submit'>Add task</button>
    </form>

    <p><a href='/'>Home</a></p>
</body>
</html>
